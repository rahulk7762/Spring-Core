<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    
<bean name="address1" class="com.my.spring.model.Address" scope="prototype">
<property name="city" value="Noida" />
<property name="state" value="Up" />
</bean>


<bean name="empA" class="com.my.spring.model.Employee" init-method="xmlInitMethod"  destroy-method="xmlDestroyMethod" >
		<property name="name" value="Mona"/>
		<property name="gender" value="male"/>
</bean>

</beans>